---
import Layout from '../layouts/Layout.astro';
import Badges from '../components/Badges.astro';
import Linkedin from '../components/icons/Linkedin.astro';
import SocialPill from '../components/SocialPill.astro';
import GitHub from '../components/icons/GitHub.astro';
import Mail from '../components/icons/Mail.astro';
import SectionContainer from '../components/SectionContainer.astro';
import FolderCode from '../components/icons/FolderCode.astro';
import Projects from '../components/Projects.astro';
import User from '../components/icons/User.astro'
import AboutMe from '../components/AboutMe.astro';
import Laptop from '../components/icons/Laptop.astro';
import Stack from '../components/Stack.astro'
---

<Layout title="Portfolio | Facundo | Desarrollador y Programador Web"
description="Facundo López - Desarrollador Back-End especializado en la creación y optimización de sistemas interactivos y escalables."
>
	<main class="px-4">
		<SectionContainer class="mt-40 lg:mb-[230px]" id="top">
			<img class="rounded-full size-40 mb-4" src="/src/images/yo.jpg" alt="Foto de Facu">
		<h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-3 pb-4 lg:pb-6">
			Hola, soy Facundo 
			<a href="https://www.linkedin.com/in/facundolopezz/" target="_blank" rel="noopener" class="flex justify-center items-center">
				<Badges>Disponible para trabajar</Badges>
			</a>
		</h1>
		<h2 class=" text-xl lg:text-2xl max-w-[700px] text-wrap">+15 años de experiencia.<span class="text-violet-200/90"> Desarrollador Web y Creador de Contenido</span><span class="text-blue-300/90"> de Mendoza, Argentina</span>. 
			<span class="opacity-75">Especializado en crear soluciones unicas</span>
		</h2>

		<nav class="flex gap-4 lg:gap-6 mt-8 flex-wrap">
			<SocialPill href="https://www.linkedin.com/in/facundolopezz">
				<Linkedin class="size-4 lg:size-6" />Linkedin
			</SocialPill>
			<SocialPill href="https://github.com/Facuvc4">
				<GitHub class="size-4 lg:size-6" />GitHub
			</SocialPill>
			<SocialPill href="mailto:facundolopez026@gmail.com?subject=Quiero Contratartel&body=Hola Facundo, me gustaria contratar tus servicios">
				<Mail class="size-4 lg:size-6" />Contactame
			</SocialPill>
		</nav>
		</SectionContainer>

		<SectionContainer class="lg:pt-4" id="proyectos">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<FolderCode class="size-10" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>

		<SectionContainer  id="sobre-mi">
			<h2 class="text-3xl font-semiboldmb-6 flex gap-x-3 items-center">
				<User class="size-10" />
				Sobre mí
			</h2>
			<AboutMe />
		</SectionContainer>
		<SectionContainer  id="sobre-mi">
			<h2 class="mb-6 text-3xl font-semiboldmb-6 flex gap-x-3 items-center">
				<Laptop class="size-10" />
				Tecnologías
			</h2>
			<Stack />
		</SectionContainer>
	</main>
</Layout>
